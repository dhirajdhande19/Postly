<% layout("layout/boilerplate") %>



<div class="post-continer">
    <form action="/newPost" method="POST">
        <textarea name="title" id="title" class="title" placeholder="Enter Title" required></textarea><br><br>
        <textarea name="subtitle" id="subtitle" class="subtitle" placeholder="Enter Sub-Title for your story" required></textarea><br><br>
        <textarea name="content" id="content" class="content" placeholder="Tell your story..." required></textarea><br><br>
        <button class="btn btn-success">Publish</button>
    </form>
</div>
