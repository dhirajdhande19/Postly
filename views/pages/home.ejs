    <link rel="stylesheet" href="../css/style.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body">
    <div class="container-fluid">
            <a class="navbar-brand m-1 p-2" href="#">
                <img src="../images/Medium-Wordmark-Black.png" height="28">
            </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <form class="d-flex" role="search">
        <span class="input-group-text search-logo bg-light"><i class="fa-solid fa-magnifying-glass"></i></span>
        <input id="search-bar" class="form-control me-2 shadow-none bg-light" type="search" placeholder="Search"/>
      </form>

    <div class="d-flex align-items-center gap-4 ms-auto nav-icons">
      <span><i class="fa-solid fa-pen-to-square fs-5"></i>&nbsp;&nbsp;Write</span>
      <span><i class="fa-solid fa-bell fs-5"></i></span>
      <span><i class="fa-solid fa-user"></i></span>
    </div>
    </div>
  </div>
</nav>

<div class="container-center">
    <div id="container-main">
        <div class="shorthand">
        <ul class="nav nav-underline offset-2 mt-5">
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fa-solid fa-plus"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="#">For you</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Following</a>
            </li>
            <li class="nav-item">
                <a class="nav-link">Featured</a>
            </li>
        </ul>
    <div class="line"></div>
        </div>

    <% for (let post of allPosts) { %>
        <div class="data">
            <div class="card">
            <h4><%= post.title %></h4>
            <p><%= post.content %></p>
            <p><%= post.summary %></p>
            <p><%= post.publishedAt %></p>
            <p><%= post.claps %></p>
            <p><%= post.commentsCount %></p>
            </div>
            <div class="line"></div>
        </div>
    <% } %>


    </div>
